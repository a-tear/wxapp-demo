page {
    background-color: #f2f2f2;
}

.header {
    position: relative;
    height: 88rpx;
    background-color: #fff;
    display: flex;
    justify-content: space-between;
    align-items: center;
    color: #353535;
    font-size: 28rpx;
}

.header .status-item {
    width: 150rpx;
    height: 100%;
    text-align: center;
    line-height: 88rpx;
    color: #353535;
    font-size: 28rpx;
    box-sizing: border-box
}

.header .status-item.active {
    border-bottom: 6rpx solid #e64340;
    color: #e64340;
}

.no-order {
    width: 100%;
    position: absolute;
    bottom: 0;
    top: 88rpx;
    left: 0;
    right: 0;
    text-align: center;
    padding-top: 203rpx;
    background-color: #F2f2f2;
}

.no-order-img {
    width: 81rpx;
    height: 96rpx;
    margin-bottom: 31rpx;
}

.no-order .text {
    font-size: 28rpx;
    color: #999999;
    text-align: center
}