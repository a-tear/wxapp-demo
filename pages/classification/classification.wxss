/* pages/classification/classification.wxss */
page {
    background: #f5f5f5;
    width: 100vw;
    height: 100vh;
}

.classification {
    width: 100vw;
    height: 86vh;
}

.header {
    width: 100%;
    background-color: #fff;
    display: flex;
    justify-content: space-around;
    align-items: center;

}

.header .search {
    margin: 32rpx 0;
    width: 700rpx;
    height: 66rpx;
    border: 1rpx solid #e3e3e3;
    border-radius: 30rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.header .search input {
    margin-left: 60rpx;
}

.header .search image {
    margin-right: 40rpx;
    width: 35rpx;
    height: 35rpx;
}

.content {
    padding-top: 30rpx;
    display: flex;
    width: 100vw;
    height: 100%;
    background-color: #fff;
}

.content .sider {
    width: 180rpx;
    height: 100%;
    background-color: #fff;
}

.content .sider .goods-class {
    padding: 30rpx 0rpx;
    text-align: center;

}

.content .sider .goods-class.active {
    background: #fff;
    border-left: 4rpx solid #d81e06;
}

.content .sider .goods-class .name {
    display: inline-block;
    font-size: 28rpx;
    color: #646464;
    line-height: 1.2;
    text-align: left;
    pointer-events: none;
}

.content .sider .goods-class .name.active {
    color: #d81e06;
    font-weight: bold;
}

.content .goods {
    flex: 1;
    min-height: 100%;
}

.goods .no-data {
    display: flex;
    align-items: center;
    justify-content: center;
}

.goods .no-data .txt {
    font-size: 26rpx;
    color: rgba(153, 153, 153, 1);
    margin: 0 16rpx;

}

.goods .no-data .line {
    width: 100rpx;
    height: 2rpx;
    background-color: #999;
}

.content .goods .goods-info {
    border-bottom: 2rpx solid #f5f5f5;
    padding: 20rpx 30rpx;
    display: flex;
    background-color: #fff;
    flex: 1;
}

.content .goods .goods-img {
    margin-right: 20rpx;
    width: 140rpx;
    height: 140rpx;
}

.content .goods .goods-img image {
    border-radius: 6rpx;
    width: 100%;
    height: 100%;
}

.content .goods .goods-text {
    width: 350rpx;
    flex: 1;
}

.content .goods .goods-text .goods-name {
    text-overflow: ellipsis;
    overflow: hidden;
    white-space: nowrap;
    font-size: 28rpx;
    color: #000;
    font-weight: bold;
    line-height: 46rpx;
}

.content .goods .goods-text .goods-price {
    color: #d81e06;
    font-size: 28rpx;
    font-weight: bold;
    line-height: 40rpx;
}

.content .goods .goods-text .foot {
    margin-top: 10rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
    font-size: 22rpx;
}

.content .goods .goods-text .foot .shopped {
    padding: 4rpx;
    color: #d81e06;
    border: 2rpx solid #d81e06;
    border-radius: 5rpx;

}