/* pages/my/my.wxss */
page {
    background-color: #f5f5f5;
}

.header {
    width: 100%;
    padding-bottom: 50rpx;
    background-color: #fff;
}

.header .userInfo image {
    display: block;
    margin: 0 auto;
    width: 160rpx;
    height: 160rpx;
}

.header .userInfo .userinfo-nickname {
    margin-top: 25rpx;
    text-align: center;
}

.header .userInfo button {
    margin-left: 265rpx;
    color: #353535;
    border: 1px solid #353535;
    font-size: 28rpx;
    background-color: transparent;
}

.walletInfo {
    display: flex;
    justify-content: space-between;
    border-top: 2rpx solid #eee;
    padding: 20rpx 0;
    background-color: #fff;
    margin-bottom: 16rpx;
}

.walletInfo .item {
    width: 33.333333%;
    text-align: center;
    font-size: 26rpx;
    color: #333;
    line-height: 40rpx;
}

.walletInfo .freeze {
    border-left: 1rpx solid #eee;
    border-right: 1rpx solid #eee;
}

.myOrder {
    background-color: #fff;
    margin-bottom: 16rpx;
}

.myOrder .title {
    padding: 0 32rpx;
    height: 104rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
    border-bottom: 1rpx solid #eee;
}

.title .text {
    font-size: 34rpx;
    color: #333;
}

.title .right {
    width: 40rpx;
    height: 40rpx;
}

.title .right image {
    width: 100%;
    height: 100%;
}

.myOrder .orderInfo {
    display: flex;
    justify-content: space-around;
    padding: 20rpx 0;
}

.orderInfo .item {
    display: flex;
    flex-direction: column;
    align-items: center;
}

.orderInfo .item .icon {
    width: 67rpx;
    height: 67rpx;
}

.orderInfo .item .text {
    color: #333;
    font-size: 24rpx;
}

.orderInfo .item .icon image {
    width: 100%;
    height: 100%;
}

.content .item {
    background-color: #fff;
    margin-bottom: 16rpx;
}

.content .item .text {
    font-size: 34rpx;
    color: #333;
}

.content .item .right {
    width: 40rpx;
    height: 40rpx;
}

.content .item image {
    width: 100%;
    height: 100%;
}

.content .item .active {
    display: flex;
    padding: 0 32rpx;
    height: 104rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
    border-bottom: 1rpx solid #eee;
}