page {
    background: #f5f5f5;
}

.header {
    width: 100%;
    height: 130rpx;
    background-color: #fff;
    display: flex;
    justify-content: space-around;
    align-items: center;
    margin-bottom: 4rpx;
}

.header .search {
    width: 650rpx;
    height: 66rpx;
    border: 1rpx solid #e3e3e3;
    border-radius: 30rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.header .search input {
    margin-left: 60rpx;
}

.header .search image {
    margin-right: 40rpx;
    width: 35rpx;
    height: 35rpx;
}

.header .change {
    width: 40rpx;
    height: 40rpx;
}

.header .change image {
    width: 100%;
    height: 100%;
}

.content .screen {
    background-color: #fff;
    display: flex;
    width: 100%;
    height: 88rpx;
    justify-content: space-around;
    align-items: center;
    /* color: #fa1e26; */
}

.content .screen .info.active {
    color: #fa1e26;
}

.goods {
    display: flex;
    margin: 16rpx;
    overflow: hidden;
    border-radius: 30rpx;
}

.goods .goodImg {
    width: 220rpx;
    height: 220rpx;
}

.goods .goodImg image {
    width: 100%;
    height: 100%;

}

.goods .goodInfo {
    flex: 1;
    padding: 16rpx 32rpx 0 24rpx;
    background-color: #fff;
}

.goods .goodInfo .goodName {
    color: #333;
    font-size: 30rpx;
}

.goods .goodInfo .goodPrice {
    color: #FF3B30;
    font-size: 34rpx;
}

.goods .goodInfo .num {
    color: #999999;
    font-size: 24rpx;
}