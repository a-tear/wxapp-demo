.swiper {
    width: 750rpx;
    height: 748rpx;
    background-color: #f2f2f2;
}

.swiper .swiper-box {
    width: 100%;
    height: 100%;
}

swiper-item image {
    width: 100%;
    height: 748rpx;
}

.goodsInfo {
    padding: 35rpx 0;
}

.goodsInfo .goods-name {
    padding: 0 35rpx;
    color: #000;
    font-size: 32rpx;
    margin-bottom: 28rpx;
}

.goodsInfo .prices {
    display: flex;
    align-items: center;
}

.prices .price {
    color: #e64340;
    font-size: 50rpx;
    margin-left: 30rpx;
}

.prices .num {
    color: #ccc;
    font-size: 10pt;
    margin-left: 30rpx;
    flex: 1;
}

.goodsInfo .share {
    display: flex;
    justify-content: space-between;
    margin-right: 30rpx;
}

.goodsInfo .share .share1 {
    width: 50rpx;
    height: 50rpx;
}

.goodsInfo .share .share2 {
    margin-left: 30rpx;
    width: 50rpx;
    height: 50rpx;
}

.introduction {
    width: 100%;
    box-sizing: border-box;
    background-color: #fff;
}

.title {
    font-size: 28rpx;
    color: #000000;
    padding: 30rpx;
}

.goods-text {
    padding: 0 10rpx;
    font-size: 28rpx;
    color: #666666;
    line-height: 56rpx;
    margin-bottom: 30rpx;
}

.goods-text image {
    width: 100%;
}

.footer {
    display: flex;
    width: 100%;
    height: 100rpx;
    background-color: #fff;
    position: fixed;
    bottom: 0;
    left: 0;
    box-shadow: 0 0 8rpx 0;
}

.footer .customer-service {

    width: 120rpx;
    height: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    font-size: 20rpx;
    color: #008000;
    box-sizing: border-box;
}

.footer .customer-service image {
    width: 55rpx;
    height: 55rpx;
}

.footer .shop-cart {

    width: 135rpx;
    height: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    font-size: 20rpx;
    color: #acacb7;
    box-sizing: border-box;
}

.footer .shop-cart image {
    width: 55rpx;
    height: 55rpx;
}

.go-shop-cart {
    width: 250rpx;
    height: 100%;
    text-align: center;
    line-height: 100rpx;
    background-color: #ff6850;
    color: #fff;
    font-size: 34rpx;
}

.now-buy {
    width: 250rpx;
    height: 100%;
    text-align: center;
    line-height: 100rpx;
    background-color: #e64340;
    color: #fff;
    font-size: 34rpx;
}